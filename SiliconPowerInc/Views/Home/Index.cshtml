<div class="jumbotron">
    <form id="RegisterForm" method="post">
        <h2>Registration Form</h2>
        <p>
            <label for="Mail">Mail:</label>
            <input type="text" placeholder="Mail" name="Mail" id="mail" required />
            <h4 id="mail_response"></h4>
        </p>
        <p>
            <label for="Password">Password:</label>
            <input type="password" placeholder="Password" name="Pswrd" id="psw" required />
            <h4 id="pswrd_response"></h4>
        </p>
        <p>
            <label for="psw-repeat"><b>Repeat Password:</b></label>
            <input type="password" placeholder="Repeat Password" name="psw-repeat" id="psw_repeat" required>
            <h4 id="pswrd_repeat_response"></h4>
        </p>
        <p>
            <label for="Name">Name:</label>
            <input type="text" placeholder="Name" name="Name" id="name" />
            <h4 id="name_response"></h4>
        </p>
        <p>
            <label for="SurName">SurName:</label>
            <input type="text" placeholder="SurName" name="SurName" id="surname"/>
            <h4 id="surname_response"></h4>
        </p>
        <p>
            <label for="Phone">Contact Phone:</label>
            <input type="text" placeholder="Phone" name="Phone" id="phone" />
            <h4 id="phone_response"></h4>
        </p>
        <p>
            <label for="Address">Address:</label>
            <input type="text" placeholder="Address" name="Address" id="address"/>
            <h4 id="address_response"></h4>
        </p>
        <p>
            <label for="Town">Town:</label>
            <input type="text" placeholder="Town" name="Town" id="town"/>
            <h4 id="town_response"></h4>
        </p>
        <p>
            <label for="CP">CP:</label>
            <input type="text" placeholder="Postal Code" name="CP" id="cp" />
            <h4 id="cp_response"></h4>
        </p>
        <p>
            <label for="Country">Country:</label>
            <input type="text" placeholder="Country" name="Country" id="country" />
            <h4 id="country_response"></h4>
        </p>
        <p>
            <input type="button" id="saveRegister" value="Save" />
            <h5>Already have an account? <a href="#">Sign in</a>.</h5>
        </p>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="~/Scripts/RegisterScripts.js"></script>